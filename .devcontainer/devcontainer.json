{
  "name": "Dotfiles Testing Environment",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },

  "remoteUser": "testuser",

  "features": {},

  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "terminal.integrated.profiles.linux": {
          "bash": {
            "path": "/bin/bash"
          },
          "zsh": {
            "path": "/usr/bin/zsh"
          }
        }
      },
      "extensions": []
    }
  },

  "postCreateCommand": "echo 'üîê Checking GPG configuration...' && (gpg --list-secret-keys && echo 'test' | gpg --sign --armor && echo '‚úÖ GPG unlocked') || echo '‚ö†Ô∏è  GPG keys not available (this is OK for testing)' && bash ~/.welcome.sh",

  "remoteEnv": {
    "LANG": "en_US.UTF-8",
    "LC_ALL": "en_US.UTF-8"
  },

  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",

  "workspaceMount": "source=${localWorkspaceFolder},target=/workspaces/${localWorkspaceFolderBasename},type=bind",

  "containerEnv": {}
}
